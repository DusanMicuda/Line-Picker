<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/importFragment"
        android:name="com.micudasoftware.linepicker.ImportFragment"
        android:label="fragment_import"
        tools:layout="@layout/fragment_import">
        <action
            android:id="@+id/action_importFragment_to_randomizeFragment"
            app:destination="@id/randomizeFragment" />
    </fragment>
    <fragment
        android:id="@+id/randomizeFragment"
        android:name="com.micudasoftware.linepicker.RandomizeFragment"
        android:label="fragment_randomize"
        tools:layout="@layout/fragment_randomize">
        <action
            android:id="@+id/action_randomizeFragment_to_exportFragment"
            app:destination="@id/exportFragment" />
    </fragment>
    <fragment
        android:id="@+id/exportFragment"
        android:name="com.micudasoftware.linepicker.ExportFragment"
        android:label="fragment_export"
        tools:layout="@layout/fragment_export" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.micudasoftware.linepicker.SplashScreenFragment"
        android:label="SplashScreenFragment">
        <action
            android:id="@+id/action_splashScreenFragment_to_importFragment"
            app:destination="@id/importFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_PDFFragment"
            app:destination="@id/PDFFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/PDFFragment"
        android:name="com.micudasoftware.linepicker.PDFFragment"
        android:label="PDFFragment" >
        <action
            android:id="@+id/action_PDFFragment_to_importFragment"
            app:destination="@id/importFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="file"
            app:argType="string" />
        <argument
            android:name="isFirstStart"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
</navigation>